@model Cinema.Models.DataBaseModels.Movie

@{
    ViewData["Title"] = @Model.Title;
}

<h1>@Model.Title</h1>

<div>
    <img src="@Model.PosterUrl" alt="Poster for @Model.Title" style="width: 300px; height: auto;" />
</div>

<div>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Duration:</strong> @Model.DurationMinutes minutes</p>
    <p><strong>Rating:</strong> @Model.Rating</p>
    <p><a href="@Model.TrailerUrl" target="_blank" class="btn btn-secondary">Watch Trailer</a></p>
</div>
