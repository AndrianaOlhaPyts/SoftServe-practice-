@model Cinema.Models.DataBaseModels.Session

@{
    ViewData["Title"] = "Delete Session";
}

<h1>Are you sure you want to delete this session?</h1>

<p>Movie: @Model.Movie.Title</p>
<p>Hall: @Model.Hall.Name</p>
<p>Start Time: @Model.StartTime</p>
<p>End Time: @Model.EndTime</p>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
