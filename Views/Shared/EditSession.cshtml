@model Cinema.Models.DataBaseModels.Session

@{
    ViewData["Title"] = "Edit Session";
}

<h1>Edit Session</h1>

<form asp-action="EditSession">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Movie</label>
        <select asp-for="MovieId" class="form-control" asp-items="@(new SelectList(ViewBag.Movies, "Id", "Title"))"></select>
    </div>
    <div class="form-group">
        <label>Hall</label>
        <select asp-for="HallId" class="form-control" asp-items="@(new SelectList(ViewBag.Halls, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label>Start Time</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" required />
    </div>
    <div class="form-group">
        <label>End Time</label>
        <input asp-for="EndTime" type="datetime-local" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<!-- Додана кнопка для переходу на сторінку управління цінами квитків -->
<a href="@Url.Action("ManageTickets", "Tickets")" class="btn btn-secondary mt-3">Manage Tickets</a>
