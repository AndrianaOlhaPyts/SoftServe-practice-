@model Cinema.DTOs.MovieDTO

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<h3>Are you sure you want to delete this movie?</h3>

<div>
    <h4>@Model.Title</h4>
    <img src="@Model.PosterUrl" alt="Poster for @Model.Title" style="width: 100px; height: auto;" />
    <p>
        <strong>Trailer: </strong>
        <a href="@Model.TrailerUrl" target="_blank">Watch Trailer</a>
    </p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Movies", "Home")" class="btn btn-secondary">Cancel</a>
</form>
