@model Cinema.Models.DataBaseModels.Session

@{
    ViewData["Title"] = "Session Details";
}

<h2>Session Details</h2>

<p><strong>Movie:</strong> @Model.Movie.Title</p>
<p><strong>Hall:</strong> @Model.Hall.Name</p>
<p><strong>Start Time:</strong> @Model.StartTime</p>
<p><strong>End Time:</strong> @Model.EndTime</p>

<!-- Кнопка для переходу на сторінку керування квитками -->
<a href="@Url.Action("ManageTickets", "Home", new { sessionId = Model.Id })" class="btn btn-primary">
    Manage Tickets
</a>
