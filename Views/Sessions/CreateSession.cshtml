@model Cinema.Models.ViewModels.SessionCreateViewModel

@{
    ViewData["Title"] = "Create Session";
}
@if (User.IsInRole("Admin"))
{
    <h2>Create Session</h2>

    <form asp-action="CreateSession" method="post">
        <div class="form-group">
            <label>Movie</label>
            <select asp-for="MovieId" asp-items="ViewBag.Movies" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Hall</label>
            <select asp-for="HallId" asp-items="ViewBag.Halls" class="form-control"></select>
        </div>

        <div class="form-group">
            <label>Start Time</label>
            <input asp-for="StartTime" type="datetime-local" class="form-control" />
        </div>

        <div class="form-group">
            <label>End Time</label>
            <input asp-for="EndTime" type="datetime-local" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}
